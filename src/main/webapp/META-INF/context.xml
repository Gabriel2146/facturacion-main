<?xml version="1.0" encoding="UTF-8"?>

<Context>

	<JarScanner scanClassPath="false" />
	<CookieProcessor sameSiteCookies="lax" /> <!-- Para cumplir con OWASP -->

	<!--
	ConfiguraciÃ³n de DataSource para MySQL.
	Este DataSource es referenciado en persistence.xml como java://comp/env/jdbc/facturacionDS
	-->

	<!-- MySQL - CONFIGURADO PARA EL PROYECTO -->
    <Resource name="jdbc/facturacionDS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="root" password=""
	      driverClassName="com.mysql.cj.jdbc.Driver"
	      url="jdbc:mysql://localhost:3306/facturaciondb?useSSL=false&amp;serverTimezone=UTC"/>

	<!-- Otras configuraciones de BD comentadas para referencia -->

	<!-- HSQLDB (para desarrollo/testing local)
